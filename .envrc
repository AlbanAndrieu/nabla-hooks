fi

#
# Environment configuration
# =========================
#
#

DOTENV_ADDONS=".env .env.secrets"
# shellcheck disable=SC2155
for addon in ${DOTENV_ADDONS}; do
  if [ -e "${PWD}/${addon}" ]; then
    dotenv "${PWD}/${addon}"
  fi
done

ENV_ADDONS=".env.local"
for addon in ${ENV_ADDONS}; do
  if [ -e "${PWD}/${addon}" ]; then
    # shellcheck disable=SC1090
    source "${PWD}/${addon}"
  fi
done
#
# Scripts configuration
# =========================
#
#

PATH_add "${PWD}"

# shellcheck disable=SC2155
export PROJECT_ROOT=$(git rev-parse --show-toplevel 2>/dev/null)

# 'PATH_add' and 'path_add' are different commands
PATH_add "${PROJECT_ROOT}/scripts"

# See https://github.com/direnv/direnv/wiki/PS1
unset PS1
