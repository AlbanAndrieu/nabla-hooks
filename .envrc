  # if [ ! -e "${VENV_BIN_DIR}/ansible" ]; then
  #   echo "===> Getting ansible:${ANSIBLE_VERSION} (can take a while to execute)"
  #   python -m pip install "${ANSIBLE_PKG_URL}"
  # fi

  #
  # Ansible configuration
